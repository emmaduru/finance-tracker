<%- include("layouts/header") %> 
    <div class="info-cards row">
        <div class="text-white text-center col-md-4">
            <div class="card bg-success">
                <div class="card-header">Income</div>
                <div class="card-body">$5000</div>
            </div>
        </div>
        <div class="text-white text-center col-md-4">
            <div class="card bg-danger">
                <div class="card-header">Expenses</div>
                <div class="card-body">$3000</div>
            </div>
        </div>
        <div class="text-white text-center col-md-4">
            <div class="card bg-secondary">
                <div class="card-header">Balance</div>
                <div class="card-body">$3000</div>
            </div>
        </div>
    </div>

    
    <hr>
    <div class="transaction-list">
        <div class="d-flex justify-content-between my-3">
            <h4>All Transactions</h4>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Transaction
            </button>
        </div>
        
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="">
                    <div class="modal-body">
                        <div class="form-group mb-2">
                            <label for="description">Description</label>
                            <input type="text" name="description" id="description" class="form-control">
                        </div>
                
                        <div class="form-group mb-2">
                            <label for="type">Type</label>
                            <select name="type" id="type" class="form-control">
                                <option value="income">Income</option>
                                <option value="expense">Expense</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Transaction</button>
                    </div>
                </form>
            </div>
            </div>
        </div> 
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Salary
              <span>
                <span class="badge bg-success rounded-pill mx-2">$300</span>
                <a href="#" class="text-danger"><i class="fa-solid fa-trash-can"></i></a>
              </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              School Fees
              <span>
                <span class="badge bg-danger rounded-pill mx-2">$265</span>
                <a href="#" class="text-danger"><i class="fa-solid fa-trash-can"></i></a>
              </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Stationery
              <span>
                <span class="badge bg-danger rounded-pill mx-2">$10</span>
                <a href="#" class="text-danger"><i class="fa-solid fa-trash-can"></i></a>
              </span>
            </li>
          </ul>
    </div>
<%- include("layouts/footer") %> 